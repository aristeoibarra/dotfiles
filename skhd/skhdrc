# Change focus between windows
alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east

# Move windows position
shift + alt - h : yabai -m window --swap west
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north
shift + alt - l : yabai -m window --swap east

# Resize windows
shift + cmd - h : yabai -m window --resize left:-50:0 || yabai -m window --resize right:-50:0
shift + cmd - j : yabai -m window --resize bottom:0:50 || yabai -m window --resize top:0:50
shift + cmd - k : yabai -m window --resize top:0:-50 || yabai -m window --resize bottom:0:-50
shift + cmd - l : yabai -m window --resize right:50:0 || yabai -m window --resize left:50:0

# Rotate layout
alt - r : yabai -m space --rotate 90

# Toggle fullscreen
alt - f : yabai -m window --toggle zoom-fullscreen

# Switch between layouts (bsp/float/stack)
alt - b : yabai -m space --layout bsp
alt - s : yabai -m space --layout stack
alt - d : yabai -m space --layout float

# Switch to different spaces (desktops)
alt - 1 : yabai -m space --focus 1
alt - 2 : yabai -m space --focus 2
alt - 3 : yabai -m space --focus 3
alt - 4 : yabai -m space --focus 4

# Restart yabai
shift + alt - r : yabai --restart-service

# Block Command + Tab (disable default behavior)
cmd - tab : return

# Switch to next window
alt - tab : yabai -m window --focus next || yabai -m window --focus first

# Switch to previous window
alt + shift - tab : yabai -m window --focus prev || yabai -m window --focus last

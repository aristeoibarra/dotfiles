# Cambiar focus entre ventanas
alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east

# Mover ventanas de posición
shift + alt - h : yabai -m window --swap west
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north
shift + alt - l : yabai -m window --swap east

# Cambiar tamaño de ventanas
shift + cmd - h : yabai -m window --resize left:-50:0 || yabai -m window --resize right:-50:0
shift + cmd - j : yabai -m window --resize bottom:0:50 || yabai -m window --resize top:0:50
shift + cmd - k : yabai -m window --resize top:0:-50 || yabai -m window --resize bottom:0:-50
shift + cmd - l : yabai -m window --resize right:50:0 || yabai -m window --resize left:50:0

# Rotar el layout
alt - r : yabai -m space --rotate 90

# Hacer ventana fullscreen
alt - f : yabai -m window --toggle zoom-fullscreen

# Cambiar entre layouts (bsp/float/stack)
alt - b : yabai -m space --layout bsp
alt - s : yabai -m space --layout stack
alt - d : yabai -m space --layout float

# Cambiar a diferentes espacios (escritorios)
alt - 1 : yabai -m space --focus 1
alt - 2 : yabai -m space --focus 2
alt - 3 : yabai -m space --focus 3
alt - 4 : yabai -m space --focus 4

# Reiniciar yabai
shift + alt - r : yabai --restart-service

# Bloquear Command + Tab (para que no haga nada)
cmd - tab : return

# Cambiar a la siguiente ventana
alt - tab : yabai -m window --focus next || yabai -m window --focus first

# Cambiar a la ventana anterior
alt + shift - tab : yabai -m window --focus prev || yabai -m window --focus last

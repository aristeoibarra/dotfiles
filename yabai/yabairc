#!/usr/bin/env sh

# Stack layout (fullscreen by default, toggle to BSP with Alt+m)
yabai -m config layout stack

# Padding for ergonomics (optimized for 27" @ 82 PPI)
yabai -m config top_padding    16
yabai -m config bottom_padding 12
yabai -m config left_padding   12
yabai -m config right_padding  12

# Gap for visual separation in splits
yabai -m config window_gap     12

# No borders or visual shadows
yabai -m config window_border off
yabai -m config mouse_follows_focus off
yabai -m config focus_follows_mouse off

# Disable mouse completely (keyboard only)
yabai -m config mouse_modifier fn
yabai -m config mouse_action1 none
yabai -m config mouse_action2 none
yabai -m config mouse_drop_action swap

# Opacity disabled for better Eye-Care compatibility (27" monitor optimization)
yabai -m config window_opacity off

# Instant animations (requires SIP disabled)
yabai -m config window_animation_duration 0.0

# New windows split available space
yabai -m config window_placement second_child

# Balanced split ratio
yabai -m config split_ratio 0.50

# Auto-balance when closing windows
yabai -m config auto_balance on

# Apps that should NOT be tiled
yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="^Calculator$" manage=off
yabai -m rule --add app="^Finder$" manage=off
yabai -m rule --add app="^Raycast$" manage=off
yabai -m rule --add app="^Activity Monitor$" manage=off
yabai -m rule --add app="^RoundPie$" manage=off
yabai -m rule --add app="^App Store$" manage=off
yabai -m rule --add app="^Archive Utility$" manage=off
yabai -m rule --add app="^Disk Utility$" manage=off
yabai -m rule --add app="^System Information$" manage=off
yabai -m rule --add app="^Preferences$" manage=off
yabai -m rule --add app="^Software Update$" manage=off
yabai -m rule --add app="^Preview$" manage=off
yabai -m rule --add app="^Simulator$" manage=off
yabai -m rule --add app="^QuickTime Player$" manage=off


echo "yabai ultra minimal loaded.."

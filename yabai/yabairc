#!/usr/bin/env sh

# BSP layout (pure tiling)
yabai -m config layout bsp

# ZERO padding - windows stick to edges
yabai -m config top_padding    0
yabai -m config bottom_padding 0
yabai -m config left_padding   0
yabai -m config right_padding  0

# Minimal gap between windows (2-4px to distinguish them)
yabai -m config window_gap     2

# No borders or visual shadows
yabai -m config window_border off
yabai -m config mouse_follows_focus off
yabai -m config focus_follows_mouse off

# Each new window splits available space
yabai -m config window_placement second_child

# Balanced split ratio
yabai -m config split_ratio 0.50

# Apps that do NOT use tiling
yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="^Calculator$" manage=off
yabai -m rule --add app="^Finder$" manage=off
yabai -m rule --add app="^Raycast$" manage=off
yabai -m rule --add app="^Spotify$" manage=off
yabai -m rule --add app="^WhatsApp$" manage=off
yabai -m rule --add app="^Discord$" manage=off
yabai -m rule --add app="^Slack$" manage=off
yabai -m rule --add app="^1Password$" manage=off
yabai -m rule --add app="^Activity Monitor$" manage=off
yabai -m rule --add app="^RoundPie$" manage=off


echo "yabai ultra minimal loaded.."
